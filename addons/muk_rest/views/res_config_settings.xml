<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.base.setup</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="0"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='user_default_rights']" position="after">
                <div id="rest_api">
                    <h2>API</h2>
                    <div class='row mt16 o_settings_container' name="rest_api_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Docs Security</span>
                                <div class="text-muted">
                                    Set a security group to restrict the access to the docs. 
                                </div>
                                <div class="content-group">
                                    <div class="mt16 row">
                                        <label for="rest_docs_security_group_id" string="Group" class="col-3 col-lg-3 o_light_label"/>
                                        <field name="rest_docs_security_group_id" class="oe_inline"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">
                                    OAuth 2.0
                                </span>
                                <div class="text-muted">
                                    Set the configruation values for the bearer token.
                                </div>
                                <div class="content-group">
                                    <div class="mt16 row">
                                        <label for="rest_oauth2_bearer_expires_in_seconds" string="Expires in" class="col-3 col-lg-3 o_light_label"/>
                                        <field name="rest_oauth2_bearer_expires_in_seconds" class="oe_inline"/>
                                        <span class="ml-1 mt-1 d-none d-sm-inline-block">in Seconds</span>
                                    </div>
                                    <div class="mt16 row">
                                        <label for="rest_oauth2_bearer_autovacuum_days" string="Clean after" class="col-3 col-lg-3 o_light_label"/>
                                        <field name="rest_oauth2_bearer_autovacuum_days" class="oe_inline"/>
                                        <span class="ml-1 mt-1 d-none d-sm-inline-block">in Days</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
